.menu
	position fixed
	top 0
	left 0
	right 0
	display none
	width 100%
	z-index 101
	background #e5e5e5
	color #000
	&__left
		float left
	&__right
		float right
		font-size 0
		+r(990px)
			float none
			text-align center
	&__list
		margin 0
		padding 0
		font-size 0
	&__item
		margin-right 35px
		display inline-block
		vertical-align top
	&__link
		padding-top 30px
		padding-bottom 30px
		display block
		font-size 20px
		letter-spacing .5px
		color inherit
		text-decoration none
		&:hover,
		&:focus
			color inherit
			text-decoration none
	&__phone,
	&__active
		display inline-block
		vertical-align middle
	&__phone
		margin-right 40px
		padding-top 24px
		padding-bottom 24px
		+r(990px)
			margin-right 0
			padding-top 12px
			padding-bottom 12px
	&__action
		text-decoration none
		+r(990px)
			display none
		&:after
			display none
