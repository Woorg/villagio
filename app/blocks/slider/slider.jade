include ../icon/icon

mixin slider()
	.slider.slider_main.slider-pro
		.sp-slides
			.sp-slide.slider__item
				span.sp-image.slider__image(style='background-image:url(assets/images/content/slider-img-1.jpg)')
			.sp-slide.slider__item
				span.sp-image.slider__image(style='background-image:url(assets/images/content/slider-img-2.jpg)')
			.sp-slide.slider__item
				span.sp-image.slider__image(style='background-image:url(assets/images/content/slider-img-3.jpg)')
			.sp-slide.slider__item
				span.sp-image.slider__image(style='background-image:url(assets/images/content/slider-img-4.jpg)')
			.sp-slide.slider__item
				span.sp-image.slider__image(style='background-image:url(assets/images/content/slider-img-5.jpg)')

		.slider__content-w
			.slider__content-w-w
				.slider__content.container
					.row.slider__row
						.col-xs-30.col-sm-17.col-md-17.col-lg-17.slider__col
							h1.slider__title продается дом с видом на озеро
							.slider__text.hidden-sm.visible-xs
								h2 Альпийская сказка в поселке Mедисон-Парк
							a.slider__button.btn.button.button_main(href="#feedback-form") Хочу узнать подробнее
							a.slider__phone.phone(href="tel:74952667016")
								span.phone__icon-w
									+icon('callback-icon', true).phone__icon
								span.phone__val +7 495 266 70 16
						.col-xs-30.col-sm-13.col-md-13.col-lg-13.slider__col
							.slider__text.hidden-xs.visible-sm.visible-md.visible-lg
								h2 Альпийская сказка в поселке Mедисон-Парк

							.slider__block.hidden-xs.visible-sm.visible-md.visible-lg
								ul
									li
										b Наименование объекта:
										|  дом с видом на озеро
									li.price
										b Цена:
										span.price__val $ 2 650 000



