.additional
	display block
	font-size 20px
	color #000
	&__row
		margin 0
	&__title
		margin-top 0
		margin-bottom 0
		line-height 40px
		letter-spacing 1.3px
		+r(780px)
			font-size 24px
			line-height 30px
	&__control
		margin 0
		padding 0
		font-size 0

	&__control-item
		margin-right 35px
		display inline-block
		vertical-align top
		+r(780px)
			margin-right 17px
	&__control-link
		position relative
		padding-top 30px
		padding-bottom 30px
		display block
		font-size 20px
		color inherit
		text-decoration none
		+r(780px)
			font-size 16px
		&:hover,
		&:focus
			color inherit
			text-decoration none
		span
			padding-bottom 10px
			position relative
			&:after
				position absolute
				bottom 0
				left 0
				width 100%
				height 3px
				background transparent
				content ''


.additional__control-item_active
	.additional__control-link
		color #ad172b
		span
			&:after
				background #AD172B
